---
const { title, icon, description } = Astro.props;
---

<div class="card">
  <div class="icon">{icon}</div>
  <h3>{title}</h3>
  <p>{description}</p>

  <style>
    .card {
      background-color: #1f1f1f;
      border-radius: 12px;
      padding: 1.5rem;
      text-align: center;
      box-shadow: 0 0 12px rgba(0, 255, 200, 0.05);
      transition: transform 0.2s ease;
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 0 16px rgba(0, 255, 200, 0.15);
    }

    .icon {
      font-size: 2.5rem;
      margin-bottom: 0.8rem;
    }

    h3 {
      margin: 0.5rem 0;
      color: var(--color-accent-green);
    }

    p {
      font-size: 0.95rem;
      color: var(--color-text);
    }
  </style>
</div>
