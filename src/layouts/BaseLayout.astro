---
const { title = "Kalifa Sankara" } = Astro.props;
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Orbitron:wght@600&display=swap" rel="stylesheet" />
    <style>
      :root {
        --bg-main: #1E1E1E;
        --bg-alt: #2C2C2C;
        --text-main: #E6E6E6;
        --accent-green: #095c47;
        --accent-green-light: #79FFC6;
        --accent-green-hover: #18C29C;
      }

      html, body {
        margin: 0;
        padding: 0;
        min-height: 100%;
        background: linear-gradient(135deg, var(--bg-main), var(--bg-alt));
        background-size: 400% 400%;
        animation: gradientLoop 20s ease infinite;
        color: var(--text-main);
        font-family: 'Inter', sans-serif;
      }

      @keyframes gradientLoop {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
      }

      .wrapper {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      header {
        background: linear-gradient(90deg, #243b55, #141e30);
        color: white;
        padding: 1.5rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid var(--accent-green);
        position: relative;
        z-index: 10;
      }

      .brand {
        font-family: 'Orbitron', sans-serif;
        font-size: 1.8rem;
        font-weight: 600;
        background: linear-gradient(90deg, var(--accent-green), var(--accent-green-light));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      nav.desktop-nav {
        display: flex;
        gap: 1.5rem;
      }

      nav a {
        text-decoration: none;
        color: var(--text-main);
        font-weight: 600;
        position: relative;
      }

      nav a::after {
        content: "";
        position: absolute;
        width: 0;
        height: 2px;
        left: 0;
        bottom: -4px;
        background: var(--accent-green);
        transition: width 0.3s ease;
      }

      nav a:hover::after {
        width: 100%;
      }

      .burger {
        display: none;
        background: none;
        border: none;
        font-size: 2rem;
        color: var(--text-main);
        cursor: pointer;
      }

      .mobile-nav {
        display: none;
        flex-direction: column;
        background-color: var(--bg-alt);
        border-top: 1px solid var(--accent-green);
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        z-index: 9;
      }

      .mobile-nav a {
        padding: 1rem 2rem;
        border-bottom: 1px solid #333;
      }

      .mobile-nav.open {
        display: flex;
      }

      /* main {
        flex-grow: 1;
        max-width: 960px;
        margin: 0 auto;
        padding: 2rem;
      } */

      /* main {
        flex-grow: 1;
        padding: 2rem;
      } */

      main {
        max-width: none;
        width: 100%;
      }

      footer {
        padding: 2rem;
        background: #222;
        text-align: center;
        color: var(--text-main);
      }

      footer a {
        color: var(--accent-green);
        font-weight: 600;
        text-decoration: none;
      }

      footer a:hover {
        color: var(--accent-green-light);
      }

      @media (max-width: 768px) {
        nav.desktop-nav {
          display: none;
        }
        .burger {
          display: block;
        }
      }
    </style>
  </head>
  <body>
    <div class="wrapper">
      <header>
        <div class="brand">Kalifa Sankara</div>
        <nav class="desktop-nav">
          <a href="/kalifa-sankara/">Accueil</a>
          <a href="/kalifa-sankara/presentation">Présentation</a>
          <a href="/kalifa-sankara/projets">Projets</a>
          <a href="/kalifa-sankara/expertises">Expertises</a>
          <a href="/kalifa-sankara/conferences">Conférences</a>
          <a href="/kalifa-sankara/contact">Contact</a>
        </nav>
        <button class="burger" onclick="document.getElementById('mobile-nav').classList.toggle('open')">☰</button>
        <nav class="mobile-nav" id="mobile-nav">
          <a href="/kalifa-sankara/">Accueil</a>
          <a href="/kalifa-sankara/presentation">Présentation</a>
          <a href="/kalifa-sankara/projets">Projets</a>
          <a href="/kalifa-sankara/expertises">Expertises</a>
          <a href="/kalifa-sankara/conferences">Conférences</a>
          <a href="/kalifa-sankara/contact">Contact</a>
        </nav>
      </header>

      <main>
        <slot />
      </main>

      <footer>
        <p>&copy; {new Date().getFullYear()} Kalifa Sankara — <a href="https://www.linkedin.com/in/kalifa-sankara" target="_blank">LinkedIn</a> | <a href="/kalifa-sankara/cv/kalifa_sankara_cv.pdf">CV</a></p>
      </footer>
    </div>
  </body>
</html>
